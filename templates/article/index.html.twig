	<div class="container">
		{% for article in articles %}
			<article>
				<h2>{{ article.titre }}</h2>
				<div class="metadata">Ecrit par "Mr X" le {{ article.createAt | date('d/m/Y') }} à {{ article.createAt | date('H:i') }} <<<<- (on poura changer l'auteur quand les utilisateurs seront créés) </div>
				<div class="content">
				{{ article.contenu | raw}}
				<a href="{{ path('vue_article', {'id': article.id}) }}" class="btn btn-primary">Lire la suite</a>
				</div>
			</article>
		{% endfor %}
	</div>
{% endblock %}
